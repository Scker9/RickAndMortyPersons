<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DetailsStyle">
        <item name="android:textSize">@dimen/details_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/details_margin_top</item>
    </style>

    <style name="IdentifierStyle" parent="DetailsStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DescriptionStyle" parent="DetailsStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">@dimen/description_padding_end</item>
        <item name="android:gravity">center</item>
    </style>
</resources>